/**
 * 
 * @author Vitor
 *
 */

public class Pilha {
	private Node topo;
	
	/**
	 * void Construtor
	 */
	Pilha(){
		topo = null;//construtor da classe
	}
	
	/**
	 * Empilha um elemento na Pilha
	 * @param x int
	 */
	public void empilha(char x){//procedimento de empilhar
		Node aux = new Node();
		aux.info = x;
		aux.prox = topo;
		topo = aux;
	}
	
	/**
	 * Desempilha um elemento da Pilha e o retorna
	 * @return char
	 */
	public char desempilha(){//procedimento de desempilhar
		char temp = topo.info;
		topo = topo.prox;
		return temp;
	}
	/**
	 * Retorna o Elemento do topo da  pilha
	 * @return Objetc Node
	 */
	public char elementodotopo(){//retorna o elemento do topo
		return topo.info;
	}
	
	/**
	 * Retorna o estado da pilha Vazia = true ou Não Vazia = false
	 * @return boolean
	 */
	public boolean pilhavazia(){
		return topo == null;	  
	}
	public void mostrapilha(){
		Node aux = topo;
		while(aux != null){
			System.out.println(aux.info);
			aux = aux.prox;
		}
	}
	public Node getTopo() {
		return topo;
	}
}


	
	

