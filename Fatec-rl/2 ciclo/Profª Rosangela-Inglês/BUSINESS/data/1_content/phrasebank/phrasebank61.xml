<?xml version="1.0" encoding="utf-8"?>
  <exercise template="Phrasebank" category="Visiting companies">
    <title>
    <![CDATA[<b>Arriving at reception</b>]]>
    </title>
    <dialogue>
      <sentence name="A">Good morning. [I have an appointment with Linda Race.]</sentence>
      <sentence name="B">Good morning.</sentence>
	<transfer>I have an appointment with xxx.</transfer>
    </dialogue>
	<dialogue>
      <sentence name="A">[Can you sign here please?]</sentence>
      <sentence name="B">Sure.</sentence>
	<transfer>Can you sign here please?</transfer>
    </dialogue>
	<dialogue>
      <sentence name="A">[This is your visitor's pass.]</sentence>
      <sentence name="B">Thank you very much.</sentence>
	<transfer>This is your visitor's pass.</transfer>
    </dialogue>
	<dialogue>
      <sentence name="A">[Take a seat. Linda will be right down.]</sentence>
      <sentence name="B">Over here?</sentence>
      <transfer>Take a seat. Linda will be right down.</transfer>
    </dialogue>
  </exercise>