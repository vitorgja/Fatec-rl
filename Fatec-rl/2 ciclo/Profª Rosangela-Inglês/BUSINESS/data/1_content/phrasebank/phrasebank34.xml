<?xml version="1.0" encoding="utf-8"?>
  <exercise template="Phrasebank" category="Telephoning">
<title>
    <![CDATA[<b>Leaving a message</b>]]>
    </title>
    <dialogue>
      <sentence name="A">[Could I leave a message?]</sentence>
      <sentence name="B">Sure.</sentence>
	  <transfer>Could I leave a message?</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">[My number is 0151 496 0940.]</sentence>
      <sentence name="B">0151 496 0940.</sentence>
	  <transfer>My number is xxx.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">[Can Mr Butcher call me back as soon as possible?]</sentence>
      <sentence name="B">Yes, I'll give him your message.</sentence>
      <transfer>Can xxx call me back as soon as possible?</transfer>
    </dialogue>
  </exercise>