<?xml version="1.0" encoding="utf-8"?>
  <exercise template="Phrasebank" category="Socializing">
     <title>
    <![CDATA[<b>Saying hello and introductions</b>]]>
    </title>
    <dialogue>
      <sentence name="A">[Hello. My name's Karen Hiller.]</sentence>
      <sentence name="B">Hello.</sentence>
	  <transfer>Hello. My name's xxx.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">Hello. My name's Karen Hiller. </sentence>
      <sentence name="B">[Hi. I'm Zara Bolton.]</sentence>
	  <transfer>Hi. I'm xxx.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">I'm Roger Pane.</sentence>
      <sentence name="B">[Pleased to meet you.]</sentence>
      <transfer>Pleased to meet you.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">[How do you do?]</sentence>
      <sentence name="B">How do you do?</sentence>
      <transfer>How do you do?</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">[Nice to meet you, Roger.]</sentence>
      <sentence name="B">Nice to meet you too.</sentence>
      <transfer>Nice to meet you xxx.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">Hi Roger.</sentence>
      <sentence name="B">Hi Hans. [It's good to see you again.]</sentence>
      <transfer>It's good to see you again.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">Hi Roger. [How are you?]</sentence>
      <sentence name="B">I'm fine thanks. How are you?</sentence>
      <transfer>How are you?</transfer>
    </dialogue>
  </exercise>