<?xml version="1.0" encoding="utf-8"?>
  <exercise template="Phrasebank" category="Travel">
    <title>
    <![CDATA[<b>Booking a hotel room</b>]]>
    </title>
    <dialogue>
      <sentence name="A">[I'd like a room for three nights.]</sentence>
      <sentence name="B">OK. When are you arriving?</sentence>
	  <transfer>I'd like a room for three nights.</transfer>
    </dialogue>
	<dialogue>
      <sentence name="A">[Do you have any vacancies?]</sentence>
      <sentence name="B">Yes, we do.</sentence>
	  <transfer>Do you have any vacancies?</transfer>
    </dialogue>
	<dialogue>
      <sentence name="A">The price of the room is €60 a night.</sentence>
      <sentence name="B">[Does that include breakfast?]</sentence>
	  <transfer>Does that include breakfast?</transfer>
    </dialogue>
	<dialogue>
      <sentence name="A">[Can I book a room please?]</sentence>
      <sentence name="B">Certainly, sir.</sentence>
      <transfer>Can I book a room please?</transfer>
    </dialogue>
  </exercise>