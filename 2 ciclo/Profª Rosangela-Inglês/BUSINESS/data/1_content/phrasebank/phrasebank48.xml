<?xml version="1.0" encoding="utf-8"?>
  <exercise template="Phrasebank" category="Socializing">
<title>
    <![CDATA[<b>Finishing a conversation</b>]]>
    </title>
    <dialogue>
      <sentence name="A">[Please excuse me. ]I need to phone the office.</sentence>
      <sentence name="B">OK, bye.</sentence>
	  <transfer>Please excuse me.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">[Nice talking to you.]</sentence>
      <sentence name="B">Yes, and you. Bye.</sentence>
      <transfer>Nice talking to you.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">[See you later.]</sentence>
      <sentence name="B">See you.</sentence>
      <transfer>See you later.</transfer>
    </dialogue>
  </exercise>