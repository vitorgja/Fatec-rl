  <exercise template="Phrasebank" category="Socializing">
<title>
    <![CDATA[<b>Offering</b>]]>
    </title>
    <dialogue>
      <sentence name="A">[Can I help you?]</sentence>
      <sentence name="B">Yes, please. I'm looking for the R&D Department.</sentence>
	  <transfer>Can I help you?</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">[Can I get you something?] A cup of tea?</sentence>
      <sentence name="B">Yes, please.</sentence>
      <transfer>Can I get you something?</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">[Would you like another drink?]</sentence>
      <sentence name="B">No, thanks. I'm fine.</sentence>
      <transfer>Would you like another drink?</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">[Please take a seat.]</sentence>
      <sentence name="B">Thank you.</sentence>
      <transfer>Please take a seat.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">[Please go in and take a seat.]</sentence>
      <sentence name="B">In this room here?</sentence>
      <transfer>Please go in and take a seat.</transfer>
    </dialogue>
  </exercise>