<?xml version="1.0" encoding="utf-8"?>
  <exercise template="Phrasebank" category="Socializing">
<title>
    <![CDATA[<b>Responding</b>]]>
    </title>
    <dialogue>
      <sentence name="A">Would you like a coffee?</sentence>
      <sentence name="B">[Yes, please.]</sentence>
	  <transfer>Yes, please.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">Would you like a coffee?</sentence>
      <sentence name="B">[No, thanks. I'm fine.]</sentence>
	  <transfer>No, thanks. I'm fine.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">Can I have a cup of tea?</sentence>
      <sentence name="B">[Yes, of course.]</sentence>
      <transfer>Yes, of course.</transfer>
    </dialogue>
    <dialogue>
      <sentence name="A">Did you arrive here this morning?</sentence>
      <sentence name="B">[Yes, that's right.]</sentence>
      <transfer>Yes, that's right.</transfer>
    </dialogue>
  </exercise>